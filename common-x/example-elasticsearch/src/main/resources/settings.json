{
  "analysis": {
    "analyzer": {
      "ngram_analyzer": {
        "type": "custom",
        "tokenizer": "ngram_tokenizer"
      }
    },
    "tokenizer": {
      "ngram_tokenizer": {
        "type": "ngram",
        "min_gram": 1,
        "max_gram": 1,
        "token_chars": [
          "letter",
          "digit",
          "symbol",
          "punctuation"
        ]
      }
    }
  }
}
